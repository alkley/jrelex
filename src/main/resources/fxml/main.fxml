<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1100.0" xmlns:fx="http://javafx.com/fxml" fx:controller="si.comptus.jrelex.MainController">
  <center>
    <TabPane id="tabPanePageShow" fx:id="tabPaneTopDisplay" />
  </center>
  <top>
    <BorderPane fx:id="toolBar" style="-fx-background-color: linear-gradient(#999999, #333333);" >
      <left>
        <HBox>
          <children>
            <Button styleClass="jrx-menu-button" onAction="#exploreDatabase" mnemonicParsing="false" text="Database explorer" textAlignment="CENTER" underline="true">
              <HBox.margin>
                <Insets bottom="4.0" left="4.0" right="10.0" top="4.0" fx:id="x1" />
              </HBox.margin>
            </Button>
            <Button styleClass="jrx-menu-button" onAction="#manageDatabase" mnemonicParsing="false" text="Manage databases" textAlignment="CENTER" underline="true" HBox.margin="$x1" />
          </children>
        </HBox>
      </left>
      <right>
        <HBox>
          <children>
            <Button styleClass="jrx-menu-button" onAction="#appSettings">
                <tooltip><Tooltip text="Settings" /></tooltip>
                <graphic>
                    <ImageView>
                       <image><Image url="@/images/b_tblops.png" /></image>
                    </ImageView>
                </graphic>
            </Button>
            <Button styleClass="jrx-menu-button" onAction="#appHelp">
                <tooltip><Tooltip text="Help" /></tooltip>
                <graphic>
                    <ImageView>
                       <image><Image url="@/images/b_docs.png" /></image>
                    </ImageView>
                </graphic>
            </Button>
            <Button styleClass="jrx-menu-button" onAction="#appClose">
                <tooltip><Tooltip text="Close" /></tooltip>
                <graphic>
                    <ImageView>
                       <image><Image url="@/images/b_close.png" /></image>
                    </ImageView>
                </graphic>
            </Button>
          </children>
        </HBox>
      </right>
    </BorderPane>
  </top>
</BorderPane>
